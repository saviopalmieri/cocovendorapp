<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CocoVendorApp.Setup5Page"
		Title="1 passaggio per pubblicare" BackgroundColor="#EDEDF7">
	<ContentPage.Content>

		<StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand">

			<Grid HorizontalOptions="FillAndExpand" HeightRequest="5" VerticalOptions="Start" ColumnSpacing="5">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="1*" />
				</Grid.RowDefinitions>

				<BoxView Grid.Row="0" Grid.Column="0" BackgroundColor="#3d83f5" HeightRequest="5" />
				<BoxView Grid.Row="0" Grid.Column="1" BackgroundColor="#3d83f5" HeightRequest="5" />
				<BoxView Grid.Row="0" Grid.Column="2" BackgroundColor="#3d83f5" HeightRequest="5" />
				<BoxView Grid.Row="0" Grid.Column="3" BackgroundColor="#3d83f5" HeightRequest="5" />
				<BoxView Grid.Row="0" Grid.Column="4" BackgroundColor="#3d83f5" HeightRequest="5" />
			</Grid>

			<Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="6.2*" />
					<RowDefinition Height="0.8*" />
				</Grid.RowDefinitions>

				<StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Grid.Row="0" Grid.Column="0">

					<Label TextColor="#3d83f5" Text="Listino Prezzi" FontSize="22" Margin="10,5,10,5"
						HorizontalOptions="Center" VerticalOptions="Start"/>

					<Label TextColor="#717171" Text="Inserisci il listino prezzi per il tuo lido/bagno." FontSize="14" Margin="10,5,10,5"
						HorizontalOptions="Center" HorizontalTextAlignment="Center" VerticalOptions="Start"/>

					<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="Start"
							BackgroundColor="White">
							<Image Source="ombrellone.png" Margin="10,10,10,10" Aspect="AspectFit" WidthRequest="35"
								HorizontalOptions="Start" VerticalOptions="Center" ></Image>

							<Label TextColor="#000" Text="Ombrelloni" FontSize="Medium" Margin="10,5,10,5"
								HorizontalOptions="Start" HorizontalTextAlignment="Start" VerticalOptions="CenterAndExpand"/>

							<BoxView Color="White" HorizontalOptions="CenterAndExpand" />
							
							<StackLayout Orientation="Horizontal" HorizontalOptions="End" VerticalOptions="FillAndExpand">
								<Label TextColor="#000" Text="€" FontSize="Medium" Margin="10,5,10,5"
									HorizontalOptions="Start" HorizontalTextAlignment="Start" VerticalOptions="CenterAndExpand" />

								<Entry Text="0" Placeholder="es: 15€" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" HorizontalTextAlignment="Center"
									Keyboard="Numeric" TextColor="Black" x:Name="txtPrezzoOmbrelloni" Margin="0,5,20,5" />
							</StackLayout>
						</StackLayout>

						<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="Start"
							BackgroundColor="White">
							<Image Source="lettino.png" Margin="10,10,10,10" Aspect="AspectFit" WidthRequest="35"
								HorizontalOptions="Start" VerticalOptions="Center" ></Image>

							<Label TextColor="#000" Text="Lettini" FontSize="Medium" Margin="10,5,10,5"
								HorizontalOptions="Start" HorizontalTextAlignment="Start" VerticalOptions="CenterAndExpand"/>

							<BoxView Color="White" HorizontalOptions="CenterAndExpand" />
							
							<StackLayout Orientation="Horizontal" HorizontalOptions="End" VerticalOptions="FillAndExpand">
								<Label TextColor="#000" Text="€" FontSize="Medium" Margin="10,5,10,5"
									HorizontalOptions="Start" HorizontalTextAlignment="Start" VerticalOptions="CenterAndExpand" />

								<Entry Text="0" Placeholder="es: 15€" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" HorizontalTextAlignment="Center"
									Keyboard="Numeric" TextColor="Black" x:Name="txtPrezzoLettini" Margin="0,5,20,5" />
							</StackLayout>
						</StackLayout>

						<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="Start"
							BackgroundColor="White">
							<Image Source="sdraio.png" Margin="10,10,10,10" Aspect="AspectFit" WidthRequest="35"
								HorizontalOptions="Start" VerticalOptions="Center" ></Image>

							<Label TextColor="#000" Text="Sdraio" FontSize="Medium" Margin="10,5,10,5"
								HorizontalOptions="Start" HorizontalTextAlignment="Start" VerticalOptions="CenterAndExpand"/>

							<BoxView Color="White" HorizontalOptions="CenterAndExpand" />
							
							<StackLayout Orientation="Horizontal" HorizontalOptions="End" VerticalOptions="FillAndExpand">
								<Label TextColor="#000" Text="€" FontSize="Medium" Margin="10,5,10,5"
									HorizontalOptions="Start" HorizontalTextAlignment="Start" VerticalOptions="CenterAndExpand" />

								<Entry Text="0" Placeholder="es: 15€" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" HorizontalTextAlignment="Center"
									Keyboard="Numeric" TextColor="Black" x:Name="txtPrezzoSdraio" Margin="0,5,20,5" />
							</StackLayout>
						</StackLayout>

						<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="Start"
							BackgroundColor="White">
							<Image Source="cabina.png" Margin="10,10,10,10" Aspect="AspectFit" WidthRequest="35"
								HorizontalOptions="Start" VerticalOptions="Center" ></Image>

							<Label TextColor="#000" Text="Pacchetti" FontSize="Medium" Margin="10,5,10,5"
								HorizontalOptions="Start" HorizontalTextAlignment="Start" VerticalOptions="CenterAndExpand"/>

							<BoxView Color="White" HorizontalOptions="CenterAndExpand" />
							
							<StackLayout Orientation="Horizontal" HorizontalOptions="End" VerticalOptions="FillAndExpand">
								<Label TextColor="#000" Text="€" FontSize="Medium" Margin="10,5,10,5"
									HorizontalOptions="Start" HorizontalTextAlignment="Start" VerticalOptions="CenterAndExpand" />

								<Entry Text="0" Placeholder="es: 15€" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" HorizontalTextAlignment="Center"
									Keyboard="Numeric" TextColor="Black" x:Name="txtPrezzoCabine" Margin="0,5,20,5" />
							</StackLayout>
						</StackLayout>

						<Label TextColor="#717171" Text="DESCRIZIONE PACCHETTI" FontSize="14" Margin="10,10,10,5"
							HorizontalOptions="Start" HorizontalTextAlignment="Start" VerticalOptions="Start"/>

						<Entry Placeholder="Es: il pacchetto prevede un ombrellone e due lettini." HeightRequest="60" HorizontalOptions="FillAndExpand" VerticalOptions="Start" 
							HorizontalTextAlignment="Start" TextColor="Black" x:Name="txtDescrizionePacchetti" Margin="10,0,10,0" />

						<Label TextColor="#717171" Text="La Descrizione dei Pacchetti è indicata nel caso di vendita di pacchetti predefiniti (es: ombrellone + 2 lettini)." FontSize="14" Margin="10,5,10,5"
							HorizontalOptions="Start" HorizontalTextAlignment="Start" VerticalOptions="Start"/>
					
				</StackLayout>

				<BoxView Color="White" Grid.Row="1" Grid.Column="0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
				
				<Button Text="Prosegui" x:Name="btnIniziaSetup" HorizontalOptions="FillAndExpand"
					VerticalOptions="Center" Clicked="Handle_Clicked" HeightRequest="45" Grid.Row="1" Grid.Column="0"
					TextColor="White" BackgroundColor="#3d83f5" FontSize="17"
					BorderRadius="3" Margin="20,0,20,0" >
				</Button>
			</Grid>
			
		</StackLayout>
		
	</ContentPage.Content>
</ContentPage>
