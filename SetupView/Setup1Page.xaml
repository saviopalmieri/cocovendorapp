<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="CocoVendorApp.Setup1Page" 
	BackgroundColor="#EDEDF7" Title="5 passaggi per pubblicare">
	<ContentPage.Content>

		<StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand">

			<Grid HorizontalOptions="FillAndExpand" HeightRequest="5" VerticalOptions="Start" ColumnSpacing="5">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="1*" />
				</Grid.RowDefinitions>

				<BoxView Grid.Row="0" Grid.Column="0" BackgroundColor="#3d83f5" HeightRequest="5" />
			</Grid>

			<Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="6.2*" />
					<RowDefinition Height="0.8*" />
				</Grid.RowDefinitions>

				<StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Grid.Row="0" Grid.Column="0">

					<Label TextColor="#3d83f5" Text="Informazioni Generali" FontSize="22" Margin="20,5,20,10"
					HorizontalOptions="Center" VerticalOptions="Start"/>

					<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" BackgroundColor="White" VerticalOptions="Start" >
						<Label Text="Nome Lido *" HorizontalOptions="FillAndExpand"  
							HorizontalTextAlignment="Start" VerticalTextAlignment="Center"
							TextColor="Black" FontSize="Medium"
							 Margin="20,5,20,5" >
						</Label>

						<Entry Placeholder="Obbligatorio" HorizontalOptions="End"
							x:Name="txtNomeLido" WidthRequest="180"
							HorizontalTextAlignment="Center" 
							TextColor="Black" FontSize="Medium"
							Margin="20,5,20,5"  >
						</Entry>
					</StackLayout>

					<Label TextColor="#717171" Text="Inserisci il nome che verrà utilizzato sul tuo profilo pubblico." FontSize="16" Margin="20,5,5,10"
						HorizontalOptions="Center" HorizontalTextAlignment="Start" VerticalOptions="Start"/>
					
					<Label TextColor="#717171" Text="ATTENZIONE: una volta inserito il nome, non sarà possibile modificarlo. Assicurati che sia corretto." FontSize="16" Margin="20,5,5,10"
						HorizontalOptions="Center" HorizontalTextAlignment="Start" VerticalOptions="Start"/>

					<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" BackgroundColor="White" VerticalOptions="Start" >
						<Label Text="Nome Utente *" HorizontalOptions="FillAndExpand"  
							HorizontalTextAlignment="Start" VerticalTextAlignment="Center"
							TextColor="Black" FontSize="Medium"
							 Margin="20,5,5,5" >
						</Label>

						<Entry Placeholder="Nome e Cognome" HorizontalOptions="End"
							x:Name="txtNome" WidthRequest="180"
							HorizontalTextAlignment="Center" 
							TextColor="Black" FontSize="Medium"
							Margin="5,5,20,5"  >
						</Entry>
					</StackLayout>

					<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" BackgroundColor="White" VerticalOptions="Start" Margin="0,0,0,20" >
						<Label Text="Telefono *" HorizontalOptions="FillAndExpand"  
							HorizontalTextAlignment="Start" VerticalTextAlignment="Center"
							TextColor="Black" FontSize="Medium"
							 Margin="20,5,20,5" >
						</Label>

						<Entry Placeholder="Telefono" HorizontalOptions="End"
							x:Name="txtTelefono" WidthRequest="180" Keyboard="Telephone"
							HorizontalTextAlignment="Center" 
							TextColor="Black" FontSize="Medium"
							Margin="20,5,20,5"  >
						</Entry>
					</StackLayout>

					<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" BackgroundColor="White" VerticalOptions="Start" >
						<Label Text="Data di Apertura" HorizontalOptions="FillAndExpand"  
							HorizontalTextAlignment="Start" VerticalTextAlignment="Center"
							TextColor="Black" FontSize="Medium"
							 Margin="20,5,20,5" >
						</Label>

						<DatePicker x:Name="dateOpening" HorizontalOptions="End" WidthRequest="105"
							Grid.Row="2" Grid.Column="1" Margin="20,5,20,5" >
						</DatePicker>
					</StackLayout>

					<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" BackgroundColor="White" VerticalOptions="Start" >
						<Label Text="Data di Chiusura" HorizontalOptions="FillAndExpand"  
							HorizontalTextAlignment="Start" VerticalTextAlignment="Center"
							TextColor="Black" FontSize="Medium"
							 Margin="20,5,20,5" >
						</Label>

						<DatePicker x:Name="dateClosing" HorizontalOptions="End" WidthRequest="105"
							Grid.Row="3" Grid.Column="1" Margin="20,5,20,5" ></DatePicker>
					</StackLayout>

					<Label TextColor="#717171" Text="Inserisci le date di apertura e chiusura in cui sarà possibile prenotare tramite COCO." FontSize="16" Margin="20,5,5,10"
						HorizontalOptions="Center" HorizontalTextAlignment="Start" VerticalOptions="Start"/>
					
				</StackLayout>

				<BoxView Color="White" Grid.Row="1" Grid.Column="0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
				
				<Button Text="Prosegui" x:Name="btnIniziaSetup" HorizontalOptions="FillAndExpand"
					VerticalOptions="Center" Clicked="Handle_Clicked" HeightRequest="45" Grid.Row="1" Grid.Column="0"
					TextColor="White" BackgroundColor="#3d83f5" FontSize="17"
					BorderRadius="3" Margin="20,0,20,0" >
				</Button>
			</Grid>
			
		</StackLayout>

		
	</ContentPage.Content>
</ContentPage>
