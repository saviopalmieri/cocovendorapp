<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CocoVendorApp.AboutPage"
	Title="Info" BackgroundColor="#EDEDF7">
	<ContentPage.Content>

		<StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" HorizontalOptions="Center">

			<Image Aspect="AspectFit" Source="logo_coco.png" Margin="40,20,40,20" />

			<Label TextColor="Black" Text="v1.1" FontSize="16" Margin="20,10,20,10"
				HorizontalOptions="Center" VerticalOptions="Start"/>

			<Button Text="Termini e condizioni" x:Name="btnIniziaSetup" HorizontalOptions="FillAndExpand"
					VerticalOptions="Center" Clicked="Handle_Clicked" HeightRequest="45"
				TextColor="#3d83f5" BackgroundColor="#EDEDF7" FontSize="17"
				BorderRadius="3" Margin="20,5,20,10" >
			</Button>
			
		</StackLayout>
		
	</ContentPage.Content>
</ContentPage>
