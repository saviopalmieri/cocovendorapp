<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CocoVendorApp.PosizionePage"
	Title="Posizione" BackgroundColor="#EDEDF7">
	<ContentPage.Content>

		<Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="1*" />
				<RowDefinition Height="5.2*" />
				<RowDefinition Height="0.8*" />
			</Grid.RowDefinitions>

			<Label Text="Inserisci l'indirizzo esatto del tuo lido/bagno per localizzarlo sulla mappa." HorizontalOptions="FillAndExpand"  
				HorizontalTextAlignment="Center" VerticalTextAlignment="Center"
				Grid.Row="0" Grid.Column="0"
				TextColor="#717171" FontSize="14"
				 Margin="20,10,20,10" >
			</Label>
			
			<StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="Start" 
					Grid.Row="1" Grid.Column="0" Margin="0,20,0,10" x:Name="stackMaps">


				
			</StackLayout>

			<BoxView Color="White" Grid.Row="2" Grid.Column="0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
			
			<Button Text="Salva" x:Name="btnRegistrati" HorizontalOptions="FillAndExpand"
				Grid.Row="2" Grid.Column="0"  Clicked="Handle_Clicked" VerticalOptions="Center"
				BackgroundColor="#3d83f5" TextColor="White" FontSize="17" HeightRequest="45"
				BorderRadius="3" Margin="20,0,20,0"  >
			</Button>
		</Grid>
		
	</ContentPage.Content>
</ContentPage>
