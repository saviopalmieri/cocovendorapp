<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CocoVendorApp.RiepilogoOrdiniPage"
	Title="Riepilogo" BackgroundColor="#EDEDF7">
	<ContentPage.Content>

		<Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="0.5*" />
				<RowDefinition Height="3.5*" />
			</Grid.RowDefinitions>

			<Grid Grid.Row="0" Grid.Column="0" Margin="5,5,5,5" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" >
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="1.7*" />
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="1*" />
				</Grid.RowDefinitions>

				<Image Source="ombrellone.png" Margin="10,10,10,10"
					HorizontalOptions="Center" VerticalOptions="Center" 
					Grid.Row="0" Grid.Column="1"
 					></Image>

				<Image Source="lettino.png" Margin="10,10,10,10"
					HorizontalOptions="Center" VerticalOptions="Center" 
					Grid.Row="0" Grid.Column="2"
 					></Image>

				<Image Source="sdraio.png"  Margin="10,10,10,10"
					HorizontalOptions="Center" VerticalOptions="Center" 
					Grid.Row="0" Grid.Column="3"
 					></Image>
				
				<Image Source="cabina.png"  Margin="10,10,10,10"
					HorizontalOptions="Center" VerticalOptions="Center" 
					Grid.Row="0" Grid.Column="4"
 					></Image>

			</Grid>

			<ListView x:Name="OrdiniListView" ItemsSource="{Binding OrdiniItems}" BackgroundColor="White" Grid.Row="1" Grid.Column="0" RowHeight="60" >
			    <ListView.ItemTemplate>
			      <DataTemplate>
						<ViewCell>
					        <Grid>
					          <Grid.RowDefinitions>
					            <RowDefinition Height="*"/>
					          </Grid.RowDefinitions>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="1.8*" />
									<ColumnDefinition Width="1*" />
									<ColumnDefinition Width="1*" />
									<ColumnDefinition Width="1*" />
								</Grid.ColumnDefinitions>
					          	<Label Grid.Row="0" Grid.Column="0" TextColor="#383838" Text="{Binding NomeFila}" FontSize="14" Margin="10,0,0,0"
									VerticalTextAlignment="Center" HorizontalTextAlignment="Start" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand"/>

								<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Grid.Row="0" Grid.Column="1"
									Margin="2,0,2,0">
									<Entry HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Keyboard="Numeric"
										HorizontalTextAlignment="Center" TextColor="#3d83f5" 
										Text="{Binding QtaOmbrelloni}" />

									<Label TextColor="Black" Text="/" FontSize="12" Margin="2,0,2,0"
										VerticalTextAlignment="Center" HorizontalTextAlignment="Center" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>

									<Label TextColor="Black" Text="{Binding QtaOmbrelloni}" FontSize="12" Margin="2,0,2,0"
										VerticalTextAlignment="Center" HorizontalTextAlignment="Center" HorizontalOptions="EndAndExpand" VerticalOptions="CenterAndExpand"/>
								</StackLayout>

								<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Grid.Row="0" Grid.Column="2"
									Margin="2,0,2,0">
									<Entry HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Keyboard="Numeric"
										HorizontalTextAlignment="Center" TextColor="#3d83f5" 
										Text="{Binding QtaLettini}" />

									<Label TextColor="Black" Text="/" FontSize="14" Margin="2,0,2,0"
										VerticalTextAlignment="Center" HorizontalTextAlignment="Center" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>

									<Label TextColor="Black" Text="{Binding QtaLettini}" FontSize="12" Margin="2,0,2,0"
										VerticalTextAlignment="Center" HorizontalTextAlignment="Center" HorizontalOptions="EndAndExpand" VerticalOptions="CenterAndExpand"/>
								</StackLayout>

								<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Grid.Row="0" Grid.Column="3"
									Margin="2,0,2,0">
									<Entry  HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Keyboard="Numeric"
										HorizontalTextAlignment="Center" TextColor="#3d83f5" 
										Text="{Binding QtaSdraio}" />

									<Label TextColor="Black" Text="/" FontSize="12" Margin="2,0,2,0"
										VerticalTextAlignment="Center" HorizontalTextAlignment="Center" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>

									<Label TextColor="Black" Text="{Binding QtaSdraio}" FontSize="12" Margin="2,0,2,0"
										VerticalTextAlignment="Center" HorizontalTextAlignment="Center" HorizontalOptions="EndAndExpand" VerticalOptions="CenterAndExpand"/>
								</StackLayout>

					        </Grid>
						</ViewCell>
			      </DataTemplate>
			    </ListView.ItemTemplate>
		  	</ListView>
		</Grid>
		
	</ContentPage.Content>
</ContentPage>
