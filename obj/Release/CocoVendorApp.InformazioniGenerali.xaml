<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="CocoVendorApp.InformazioniGenerali"
		Title="Informazioni generali" BackgroundColor="#EDEDF7">
	<ContentPage.Content>

		<Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*" />
				<ColumnDefinition Width="2*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="6.2*" />
				<RowDefinition Height="0.8*" />
			</Grid.RowDefinitions>

			<StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="Start" 
					Grid.Row="0" Grid.ColumnSpan="2">

				<Label Text="Informazioni Lido" HorizontalOptions="FillAndExpand"  
					HorizontalTextAlignment="Center" VerticalTextAlignment="Center"
					Grid.Row="0" Grid.Column="0"
					TextColor="#717171" FontSize="14"
					 Margin="20,10,20,10" >
				</Label>
				
				<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="Start"
					BackgroundColor="White">
					<Label Text="Nome Lido" HorizontalOptions="FillAndExpand"  
						HorizontalTextAlignment="Start" VerticalTextAlignment="Center"
						TextColor="Black" FontSize="Medium"
						 Margin="20,5,20,5" >
					</Label>

					<Label Text="A" HorizontalOptions="FillAndExpand"  
						HorizontalTextAlignment="Start" VerticalTextAlignment="Center"
						TextColor="White" FontSize="Large"
						 Margin="0,5,0,5" >
					</Label>

					<Label  HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" x:Name="txtNomeLido"
						HorizontalTextAlignment="End" VerticalTextAlignment="Center"
						TextColor="Black" FontSize="Medium"
						Margin="20,5,20,5"  >
					</Label>
				</StackLayout>

				<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" BackgroundColor="White" VerticalOptions="Start" >
					<Label Text="Data inizio offerta" HorizontalOptions="FillAndExpand"  
						HorizontalTextAlignment="Start" VerticalTextAlignment="Center"
						TextColor="Black" FontSize="Medium"
						 Margin="20,5,20,5" >
					</Label>

					<DatePicker x:Name="dateOpening" HorizontalOptions="End" WidthRequest="105"
						Grid.Row="2" Grid.Column="1" Margin="20,5,20,5" >
					</DatePicker>
				</StackLayout>

				<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" BackgroundColor="White" VerticalOptions="Start" >
					<Label Text="Data fine offerta" HorizontalOptions="FillAndExpand"  
						HorizontalTextAlignment="Start" VerticalTextAlignment="Center"
						TextColor="Black" FontSize="Medium"
						 Margin="20,5,20,5" >
					</Label>

					<DatePicker x:Name="dateClosing" HorizontalOptions="End" WidthRequest="105"
						Grid.Row="3" Grid.Column="1" Margin="20,5,20,5" ></DatePicker>
				</StackLayout>

				<Grid HorizontalOptions="FillAndExpand" VerticalOptions="Start" BackgroundColor="White" Margin="0,20,0,0">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="4*" />
						<ColumnDefinition Width="1*" />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="*" />
					</Grid.RowDefinitions>

					<Label Text="Posizione" x:Name="btnPOsizione" HorizontalOptions="FillAndExpand" Grid.Row="0" Grid.Column="0" VerticalTextAlignment="Center"
						BackgroundColor="#fff" TextColor="Black" FontSize="Medium" HeightRequest="45" HorizontalTextAlignment="Start"
					 Margin="20,0,20,0" />

					<Label Text=">" HorizontalOptions="FillAndExpand" Grid.Row="0" Grid.Column="1" VerticalTextAlignment="Center"
						BackgroundColor="#fff" TextColor="Black" FontSize="Medium" HorizontalTextAlignment="End"
						 Margin="20,0,20,0" x:Name="lblArrow1" />
					
				</Grid>

				<Grid HorizontalOptions="FillAndExpand" VerticalOptions="Start" BackgroundColor="White">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="4*" />
						<ColumnDefinition Width="1*" />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="*" />
					</Grid.RowDefinitions>

					<Label Text="Servizi Aggiuntivi" x:Name="btnServizi" HorizontalOptions="FillAndExpand" Grid.Row="0" Grid.Column="0" VerticalTextAlignment="Center"
						BackgroundColor="#fff" TextColor="Black" FontSize="Medium" HeightRequest="45" HorizontalTextAlignment="Start"
						Margin="20,0,20,0" />


					<Label Text=">" HorizontalOptions="FillAndExpand" Grid.Row="0" Grid.Column="1" VerticalTextAlignment="Center"
						BackgroundColor="#fff" TextColor="Black" FontSize="Medium" HorizontalTextAlignment="End"
						 Margin="20,0,20,0" x:Name="lblArrow2" />
				</Grid>
				
				<!--<Button Text="Posizione" x:Name="btnPOsizione" HorizontalOptions="FillAndExpand" 
					BackgroundColor="#3d83f5" TextColor="White" FontSize="17" HeightRequest="45" Clicked="Handle_Clicked2"
					BorderRadius="0" Margin="20,20,20,5"  >
				</Button>-->
				
				<!--<Button Text="Servizi Aggiuntivi" x:Name="btnServizi" HorizontalOptions="FillAndExpand" Clicked="Handle_Clicked1" 
					BackgroundColor="#3d83f5" TextColor="White" FontSize="17" HeightRequest="45"
					BorderRadius="0" Margin="20,5,20,10"  >
				</Button>-->
			</StackLayout>

			<BoxView Color="White" Grid.Row="1" Grid.ColumnSpan="2" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
			
			<Button Text="Salva" x:Name="btnRegistrati" HorizontalOptions="FillAndExpand"
				Grid.Row="1" Grid.ColumnSpan="2"  Clicked="Handle_Clicked" VerticalOptions="Center"
				BackgroundColor="#3d83f5" TextColor="White" FontSize="17" HeightRequest="45"
				BorderRadius="3" Margin="20,0,20,0"  >
			</Button>
		</Grid>
		
	</ContentPage.Content>
</ContentPage>
