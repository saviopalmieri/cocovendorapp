	<ContentPage.Content>

		<StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" HorizontalOptions="Center">

			<Image Aspect="AspectFit" Source="logo_coco.png" Margin="40,20,40,20" />

			<Label TextColor="Black" Text="Attendi qualche secondo... " FontSize="16" Margin="20,10,20,10"
