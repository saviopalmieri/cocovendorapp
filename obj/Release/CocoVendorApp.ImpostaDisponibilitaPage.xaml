<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CocoVendorApp.ImpostaDisponibilitaPage"
	Title="Imposta disponibilità" BackgroundColor="#EDEDF7">
	<ContentPage.Content>

		<Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="4.7*" />
				<RowDefinition Height="1.5*" />
				<RowDefinition Height="0.8*" />
			</Grid.RowDefinitions>

			<StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="Start" 
					Grid.Row="0" Grid.Column="0">

				<Label Text="Inserisci le file e i posti disponibili" HorizontalOptions="FillAndExpand"  
				HorizontalTextAlignment="Center" VerticalTextAlignment="Center"
				TextColor="#717171" FontSize="14"
				 Margin="20,10,20,10" >
			</Label>

			<Grid HorizontalOptions="FillAndExpand" VerticalOptions="Start" ColumnSpacing="0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="1.4*" />
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="0.1*" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="1*" />
					<RowDefinition Height="3*" />
					<RowDefinition Height="1*" />
				</Grid.RowDefinitions>

				<StackLayout Orientation="Vertical" Grid.Row="0" Grid.Column="1">
					<Image Source="ombrellone.png" Margin="5,5,5,5" Aspect="AspectFit" HeightRequest="30"
						HorizontalOptions="Center" VerticalOptions="Center" 
						Grid.Row="0" Grid.Column="1"
	 					></Image>

					<Label TextColor="#717171" Text="Ombrelloni" FontSize="12" Margin="10,5,10,5"
						HorizontalOptions="Center" HorizontalTextAlignment="Start" VerticalOptions="Start"/>
				</StackLayout>

				<StackLayout Orientation="Vertical" Grid.Row="0" Grid.Column="2">
					<Image Source="lettino.png" Margin="5,5,5,5" Aspect="AspectFit" HeightRequest="30"
						HorizontalOptions="Center" VerticalOptions="Center" 
						Grid.Row="0" Grid.Column="1"
	 					></Image>

					<Label TextColor="#717171" Text="Lettini" FontSize="12" Margin="10,5,10,5"
						HorizontalOptions="Center" HorizontalTextAlignment="Start" VerticalOptions="Start"/>
				</StackLayout>

				<StackLayout Orientation="Vertical" Grid.Row="0" Grid.Column="3">
					<Image Source="sdraio.png" Margin="5,5,5,5" Aspect="AspectFit" HeightRequest="30"
						HorizontalOptions="Center" VerticalOptions="Center" 
						Grid.Row="0" Grid.Column="1"
	 					></Image>

					<Label TextColor="#717171" Text="Sdraio" FontSize="12" Margin="10,5,10,5"
						HorizontalOptions="Center" HorizontalTextAlignment="Start" VerticalOptions="Start"/>
				</StackLayout>

				<StackLayout Grid.Row="1" Grid.ColumnSpan="5" Orientation="Vertical">
					<ListView x:Name="FileListView" ItemsSource="{Binding FileItems}" BackgroundColor="White" RowHeight="45" >
					    <ListView.ItemTemplate>
					      <DataTemplate>
								<ViewCell>
							        <Grid>
							          <Grid.RowDefinitions>
							            <RowDefinition Height="*"/>
							          </Grid.RowDefinitions>
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="1.4*" />
											<ColumnDefinition Width="1*" />
											<ColumnDefinition Width="1*" />
											<ColumnDefinition Width="1*" />
											<ColumnDefinition Width="0.1*" />
										</Grid.ColumnDefinitions>
							          	<Label Grid.Row="0" Grid.Column="0" TextColor="Black" Text="{Binding NomeFila}" FontSize="14" Margin="20,0,0,0"
											VerticalTextAlignment="Center" HorizontalTextAlignment="Start" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand"/>
									  	<Entry Grid.Row="0" Grid.Column="1" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Keyboard="Numeric"
											HorizontalTextAlignment="Center" TextColor="Black" 
											Text="{Binding umbrella_qty}" />
										<Entry Grid.Row="0" Grid.Column="2" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Keyboard="Numeric"
											HorizontalTextAlignment="Center" TextColor="Black" 
											Text="{Binding sun_bed_qty}" />
										<Entry Grid.Row="0" Grid.Column="3" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Keyboard="Numeric"
											HorizontalTextAlignment="Center" TextColor="Black" 
											Text="{Binding chair_qty}" />
							        </Grid>
								</ViewCell>
					      </DataTemplate>
					    </ListView.ItemTemplate>
				  	</ListView>

					<StackLayout x:Name="lblDescription" Orientation="Vertical" VerticalOptions="EndAndExpand" Margin="10,5,10,5">
						<Label Text="Le File indicano la posizione di Lettini e Ombrelloni in spiaggia." HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Start" VerticalTextAlignment="Center"
							TextColor="#717171" FontSize="14"></Label>
						<Label Text="Dai la possibilità ai tuoi clienti di poter scegliere la propria fila." HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Start" VerticalTextAlignment="Center"
							TextColor="#717171" FontSize="14"></Label>
						<Label Text="Qualora non indicata il posizionamento in spiaggia sarà a tua discrezione." HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Start" VerticalTextAlignment="Center"
							TextColor="#717171" FontSize="14"></Label>
					</StackLayout>
				</StackLayout>

				<Button Text="  Aggiungi Fila  " x:Name="btnAggiungiFila" HorizontalOptions="Center"
						VerticalOptions="Center" Clicked="Handle_Clicked_Fila"
						Grid.Row="2" Grid.ColumnSpan="4" BorderColor="#383838" BorderWidth="1"
					BackgroundColor="#EDEDF7" TextColor="#383838" FontSize="17" HeightRequest="45"
					BorderRadius="3" >
				</Button>
			</Grid>
				
			</StackLayout>

			<StackLayout Grid.Row="1" Grid.Column="0" Orientation="Vertical" VerticalOptions="Start" HorizontalOptions="FillAndExpand">

				<Label Text="Inserisci il Numero di Pacchetti disponibili" HorizontalOptions="FillAndExpand"  
					HorizontalTextAlignment="Center" VerticalTextAlignment="Center"
					TextColor="#717171" FontSize="14"
					 Margin="20,5,20,5" >
				</Label>
				
				<StackLayout Orientation="Horizontal" BackgroundColor="White" VerticalOptions="Start" HorizontalOptions="FillAndExpand" >
					<Label TextColor="#000" Text="Vendita con Pacchetti" FontSize="14" Margin="20,5,5,5"
					HorizontalOptions="StartAndExpand" HorizontalTextAlignment="Start" VerticalOptions="Center"/>
				
					<Switch x:Name="switchCabine" HorizontalOptions="EndAndExpand" VerticalOptions="CenterAndExpand" Margin="5,5,20,5" Toggled="Handle_Toggled"></Switch>
				</StackLayout>

				<StackLayout Orientation="Horizontal" VerticalOptions="Start" BackgroundColor="White" HorizontalOptions="FillAndExpand" x:Name="layoutCabine" >
					<Label TextColor="#000" Text="Numero Pacchetti" FontSize="14" Margin="20,5,5,5"
						HorizontalOptions="StartAndExpand" HorizontalTextAlignment="Start" VerticalOptions="Center"/>

					<Entry HorizontalOptions="EndAndExpand" VerticalOptions="CenterAndExpand" Keyboard="Numeric" Margin="5,5,20,5"
						HorizontalTextAlignment="Center" TextColor="Black" x:Name="txtNCabine" WidthRequest="150"
						Text="0" />
				</StackLayout>
			</StackLayout>

			<BoxView Color="White" Grid.Row="2" Grid.Column="0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
			
			<Button Text="Salva" x:Name="btnRegistrati" HorizontalOptions="FillAndExpand"
				Grid.Row="2" Grid.Column="0"  Clicked="Handle_Clicked" VerticalOptions="Center"
				BackgroundColor="#3d83f5" TextColor="White" FontSize="17" HeightRequest="45"
				BorderRadius="3" Margin="20,0,20,0"  >
			</Button>
		</Grid>
		
	</ContentPage.Content>
</ContentPage>
