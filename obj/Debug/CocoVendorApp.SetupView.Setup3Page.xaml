<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CocoVendorApp.Setup3Page"
		Title="3 passaggi per pubblicare" BackgroundColor="#EDEDF7">
	<ContentPage.Content>

		<StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand">

			<Grid HorizontalOptions="FillAndExpand" HeightRequest="5" VerticalOptions="Start" ColumnSpacing="5">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="1*" />
				</Grid.RowDefinitions>

				<BoxView Grid.Row="0" Grid.Column="0" BackgroundColor="#3d83f5" HeightRequest="5" />
				<BoxView Grid.Row="0" Grid.Column="1" BackgroundColor="#3d83f5" HeightRequest="5" />
				<BoxView Grid.Row="0" Grid.Column="2" BackgroundColor="#3d83f5" HeightRequest="5" />
			</Grid>

			<Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="6.2*" />
					<RowDefinition Height="0.8*" />
				</Grid.RowDefinitions>

				<StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Grid.Row="0" Grid.Column="0">

					<Label TextColor="#3d83f5" Text="Servizi Aggiuntivi" FontSize="22" Margin="10,5,10,5"
						HorizontalOptions="Center" VerticalOptions="Start"/>

					<Label TextColor="#717171" Text="Inserisci i servizi offerti dal tuo lido/bagno. Aiuterai gli utenti a trovare quello che cercano." FontSize="14" Margin="10,5,10,5"
						HorizontalOptions="Center" HorizontalTextAlignment="Start" VerticalOptions="Start"/>

					<ListView x:Name="ServicesMenu" ItemsSource="{Binding ServicesItems}" >
					    <ListView.ItemTemplate>
					      <DataTemplate>
								<ViewCell>
							        <Grid HorizontalOptions="FillAndExpand" Margin="20,0,20,0">
							          <Grid.RowDefinitions>
							            <RowDefinition Height="*"/>
							          </Grid.RowDefinitions>
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="0.6*" />
											<ColumnDefinition Width="1*" />
											<ColumnDefinition Width="0.6*" />
										</Grid.ColumnDefinitions>
							          <Image Grid.Row="0" Grid.Column="0" HorizontalOptions="Start" Aspect="AspectFit" Source="{Binding ImageUrl}" Margin="5,5,0,5" WidthRequest="45" />
							          <Label Grid.Row="0" Grid.Column="1" TextColor="Black" Text="{Binding name}" FontSize="16" HorizontalTextAlignment="Start" HorizontalOptions="StartAndExpand" VerticalOptions="CenterAndExpand"/>
									  <Switch Grid.Column="2" Grid.Row="0" HorizontalOptions="End" VerticalOptions="Center" IsToggled="{Binding Active}" />
							        </Grid>
								</ViewCell>
					      </DataTemplate>
					    </ListView.ItemTemplate>
				  	</ListView>
					
				</StackLayout>

				<BoxView Color="White" Grid.Row="1" Grid.Column="0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
				
				<Button Text="Prosegui" x:Name="btnIniziaSetup" HorizontalOptions="FillAndExpand"
					VerticalOptions="Center" Clicked="Handle_Clicked" HeightRequest="45" Grid.Row="1" Grid.Column="0"
					TextColor="White" BackgroundColor="#3d83f5" FontSize="17"
					BorderRadius="3" Margin="20,0,20,0" >
				</Button>

			</Grid>
			
		</StackLayout>
		
	</ContentPage.Content>
</ContentPage>
