<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CocoVendorApp.Setup4Page"
		Title="2 passaggi per pubblicare" BackgroundColor="#EDEDF7">
	<ContentPage.Content>

		<StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand">

			<Grid HorizontalOptions="FillAndExpand" HeightRequest="5" VerticalOptions="Start" ColumnSpacing="5">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="1*" />
				</Grid.RowDefinitions>

				<BoxView Grid.Row="0" Grid.Column="0" BackgroundColor="#3d83f5" HeightRequest="5" />
				<BoxView Grid.Row="0" Grid.Column="1" BackgroundColor="#3d83f5" HeightRequest="5" />
				<BoxView Grid.Row="0" Grid.Column="2" BackgroundColor="#3d83f5" HeightRequest="5" />
				<BoxView Grid.Row="0" Grid.Column="3" BackgroundColor="#3d83f5" HeightRequest="5" />
			</Grid>

			<Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="6.2*" />
					<RowDefinition Height="0.8*" />
				</Grid.RowDefinitions>

				<StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Grid.Row="0" Grid.Column="0">
					<Label TextColor="#3d83f5" Text="Disponibilità" FontSize="22" Margin="10,5,10,5"
					HorizontalOptions="Center" VerticalOptions="Start"/>

				<Label TextColor="#717171" Text="Inserisci il numero di lettini, ombrelloni, sdraio e cabine che vuoi rendere disponibili alla prenotazione su COCO." FontSize="14" Margin="10,5,10,5"
					HorizontalOptions="Center" HorizontalTextAlignment="Start" VerticalOptions="Start"/>

				<Grid HorizontalOptions="FillAndExpand" VerticalOptions="Start" ColumnSpacing="0">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="1.2*" />
						<ColumnDefinition Width="1*" />
						<ColumnDefinition Width="1*" />
						<ColumnDefinition Width="1*" />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="1*" />
						<RowDefinition Height="3*" />
						<RowDefinition Height="1*" />
					</Grid.RowDefinitions>

					<StackLayout Orientation="Vertical" Grid.Row="0" Grid.Column="1">
						<Image Source="ombrellone.png" Margin="5,5,5,5" Aspect="AspectFit" HeightRequest="25"
							HorizontalOptions="Center" VerticalOptions="Center" 
							Grid.Row="0" Grid.Column="1"
		 					></Image>

						<Label TextColor="#000" Text="Ombrelloni" FontSize="12" 
							HorizontalOptions="Center" HorizontalTextAlignment="Start" VerticalOptions="Start"/>
					</StackLayout>

					<StackLayout Orientation="Vertical" Grid.Row="0" Grid.Column="2">
						<Image Source="lettino.png" Margin="5,5,5,5" Aspect="AspectFit" HeightRequest="25"
							HorizontalOptions="Center" VerticalOptions="Center" 
							Grid.Row="0" Grid.Column="1"
		 					></Image>

						<Label TextColor="#000" Text="Lettini" FontSize="12" 
							HorizontalOptions="Center" HorizontalTextAlignment="Start" VerticalOptions="Start"/>
					</StackLayout>

					<StackLayout Orientation="Vertical" Grid.Row="0" Grid.Column="3">
						<Image Source="sdraio.png" Margin="5,5,5,5" Aspect="AspectFit" HeightRequest="25"
							HorizontalOptions="Center" VerticalOptions="Center" 
							Grid.Row="0" Grid.Column="1"
		 					></Image>

						<Label TextColor="#000" Text="Sdraio" FontSize="12" 
							HorizontalOptions="Center" HorizontalTextAlignment="Start" VerticalOptions="Start"/>
					</StackLayout>

					<StackLayout Grid.Row="1" Grid.ColumnSpan="4" Orientation="Vertical">
					<ListView x:Name="FileListView" ItemsSource="{Binding FileItems}" BackgroundColor="White" RowHeight="45" >
					    <ListView.ItemTemplate>
					      <DataTemplate>
								<ViewCell>
							        <Grid>
							          <Grid.RowDefinitions>
							            <RowDefinition Height="*"/>
							          </Grid.RowDefinitions>
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="1.5*" />
											<ColumnDefinition Width="1*" />
											<ColumnDefinition Width="1*" />
											<ColumnDefinition Width="1*" />
											<ColumnDefinition Width="0.1*" />
										</Grid.ColumnDefinitions>
							          	<Label Grid.Row="0" Grid.Column="0" TextColor="Black" Text="{Binding NomeFila}" FontSize="14" Margin="20,0,0,0"
											VerticalTextAlignment="Center" HorizontalTextAlignment="Start" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand"/>
									  	<Entry Grid.Row="0" Grid.Column="1" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Keyboard="Numeric"
											HorizontalTextAlignment="Center" TextColor="Black" 
											Text="{Binding QtaOmbrelloni}" />
										<Entry Grid.Row="0" Grid.Column="2" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Keyboard="Numeric"
											HorizontalTextAlignment="Center" TextColor="Black" 
											Text="{Binding QtaLettini}" />
										<Entry Grid.Row="0" Grid.Column="3" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Keyboard="Numeric"
											HorizontalTextAlignment="Center" TextColor="Black" 
											Text="{Binding QtaSdraio}" />
							        </Grid>
								</ViewCell>
					      </DataTemplate>
					    </ListView.ItemTemplate>
				  	</ListView>

					<StackLayout x:Name="lblDescription" Orientation="Vertical" VerticalOptions="EndAndExpand" Margin="10,5,10,5">
						<Label Text="Le File indicano la posizione di Lettini e Ombrelloni in spiaggia." HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Start" VerticalTextAlignment="Center"
							TextColor="#717171" FontSize="14"></Label>
						<Label Text="Dai la possibilità ai tuoi clienti di poter scegliere la propria fila." HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Start" VerticalTextAlignment="Center"
							TextColor="#717171" FontSize="14"></Label>
						<Label Text="Qualora non indicata il1posizionamento in spiaggia sarà a tua discrezione." HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Start" VerticalTextAlignment="Center"
							TextColor="#717171" FontSize="14"></Label>
					</StackLayout>
				</StackLayout>

					<Button Text="  Aggiungi Fila  " x:Name="btnAggiungiFila" HorizontalOptions="Center"
							VerticalOptions="Center" Clicked="Handle_Clicked_Fila" 
							Grid.Row="2" Grid.ColumnSpan="4" BorderColor="#383838" BorderWidth="1"
						BackgroundColor="#EDEDF7" TextColor="#383838" FontSize="17"
						BorderRadius="3" MinimumWidthRequest="300" >
					</Button>
				</Grid>

				<StackLayout Orientation="Vertical" VerticalOptions="Start" HorizontalOptions="FillAndExpand">

					<Label Text="Hai un servizio cabine?" HorizontalOptions="FillAndExpand"  
						HorizontalTextAlignment="Center" VerticalTextAlignment="Center"
						TextColor="#717171" FontSize="14"
						 Margin="20,5,20,5" >
					</Label>
					
					<StackLayout Orientation="Horizontal" BackgroundColor="White" VerticalOptions="Start" HorizontalOptions="FillAndExpand" >
						<Label TextColor="#000" Text="Servizio Cabine" FontSize="14" Margin="20,5,5,5"
						HorizontalOptions="StartAndExpand" HorizontalTextAlignment="Start" VerticalOptions="Center"/>
					
						<Switch x:Name="switchCabine" HorizontalOptions="EndAndExpand" VerticalOptions="CenterAndExpand" Margin="5,5,20,5" Toggled="Handle_Toggled"></Switch>
					</StackLayout>

					<StackLayout Orientation="Horizontal" VerticalOptions="Start" BackgroundColor="White" IsVisible="false" HorizontalOptions="FillAndExpand" x:Name="layoutCabine" >
						<Label TextColor="#000" Text="Numero Cabine" FontSize="14" Margin="20,5,5,5"
							HorizontalOptions="StartAndExpand" HorizontalTextAlignment="Start" VerticalOptions="Center"/>

						<Entry HorizontalOptions="EndAndExpand" VerticalOptions="CenterAndExpand" Keyboard="Numeric" Margin="5,5,20,5"
							HorizontalTextAlignment="Center" TextColor="Black" x:Name="txtNCabine" WidthRequest="150"
							Text="0" />
					</StackLayout>
				</StackLayout>
					
				</StackLayout>

				<BoxView Color="White" Grid.Row="1" Grid.Column="0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
				
				<Button Text="Prosegui" x:Name="btnIniziaSetup" HorizontalOptions="FillAndExpand"
					VerticalOptions="Center" Clicked="Handle_Clicked" HeightRequest="45" Grid.Row="1" Grid.Column="0"
					TextColor="White" BackgroundColor="#3d83f5" FontSize="17"
					BorderRadius="3" Margin="20,0,20,0" >
				</Button>
			</Grid>

		</StackLayout>
		
	</ContentPage.Content>
</ContentPage>
