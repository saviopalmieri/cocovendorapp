<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CocoVendorApp.RiepilogoPage"
		Title="Riepilogo" Icon="home.png" BackgroundColor="#EDEDF7">
	<ContentPage.Content>

		<Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*" />
				<ColumnDefinition Width="2*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="0.3*" />
				<RowDefinition Height="0.7*" />
				<RowDefinition Height="2.1*" />
				<RowDefinition Height="0.4*" />
			</Grid.RowDefinitions>
			
			<Label Text="Oggi" x:Name="lblDay" HorizontalOptions="FillAndExpand"
				Grid.Row="0"  Grid.ColumnSpan="2" VerticalOptions="FillAndExpand"
				HorizontalTextAlignment="Center" VerticalTextAlignment="Center"
				TextColor="Black" FontSize="Medium"
				 Margin="5,10,5,0" >
			</Label>

			<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand"
					VerticalOptions="FillAndExpand" IsVisible="false"
					Grid.Row="0" Grid.Column="1">

				<Label Text="Seleziona data:" HorizontalOptions="Start"
					VerticalOptions="Center"
					TextColor="#3d83f5" FontSize="Small"
					 Margin="20,5,20,10" >
				</Label>

				<DatePicker x:Name="dateChoosen" HorizontalOptions="Start" Margin="5,5,5,5"
						DateSelected="Handle_DateSelected">
				</DatePicker>
				
			</StackLayout>

			<Grid Grid.Row="1" Grid.ColumnSpan="2" ColumnSpacing="10" RowSpacing="5"
					Margin="5,5,5,5" >
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="1.7*" />
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="0.3*" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="1*" />
					<RowDefinition Height="0.8*" />
				</Grid.RowDefinitions>

				<Label Text="VENDITE" HorizontalOptions="StartAndExpand"
					Grid.Row="0"  Grid.Column="0"
					HorizontalTextAlignment="Center" VerticalTextAlignment="End"
					TextColor="#383838" FontSize="12" Margin="2,5,20,10" >
				</Label>

				<Image Source="ombrellone.png" Margin="5,5,5,5" Aspect="AspectFit" HeightRequest="30"
					HorizontalOptions="Center" VerticalOptions="Center" 
					Grid.Row="0" Grid.Column="1"
 					></Image>

				<Image Source="lettino.png" Margin="5,5,5,5" Aspect="AspectFit" HeightRequest="30"
					HorizontalOptions="Center" VerticalOptions="Center" 
					Grid.Row="0" Grid.Column="2"
 					></Image>

				<Image Source="sdraio.png"  Margin="5,5,5,5" Aspect="AspectFit" HeightRequest="30"
					HorizontalOptions="Center" VerticalOptions="Center" 
					Grid.Row="0" Grid.Column="3"
 					></Image>
				
				<Image Source="cabina.png"  Margin="5,5,5,5" Aspect="AspectFit" HeightRequest="30"
					HorizontalOptions="Center" VerticalOptions="Center" 
					Grid.Row="0" Grid.Column="4"
 					></Image>

				
				<BoxView Color="White" Grid.Row="1" Grid.ColumnSpan="6" />

				<Label Text="Riepilogo" HorizontalOptions="FillAndExpand"
					Grid.Row="1"  Grid.Column="0" x:Name="lblRiepilogo"
					HorizontalTextAlignment="Center" VerticalTextAlignment="Center"
					TextColor="Black" FontSize="Medium" >
				</Label>
				
				<Label Text="34" x:Name="lblDispOmbrelloni" HorizontalOptions="FillAndExpand"
					Grid.Row="1"  Grid.Column="1"
					HorizontalTextAlignment="Center" VerticalTextAlignment="Center"
					TextColor="#383838" FontSize="Medium" >
				</Label>

				<Label Text="34" x:Name="lblDispLettini" HorizontalOptions="FillAndExpand"
					Grid.Row="1"  Grid.Column="2"
					HorizontalTextAlignment="Center" VerticalTextAlignment="Center"
					TextColor="#383838" FontSize="Medium" >
				</Label>

				<Label Text="34" x:Name="lblDispSdraio" HorizontalOptions="FillAndExpand"
					Grid.Row="1"  Grid.Column="3"
					HorizontalTextAlignment="Center" VerticalTextAlignment="Center"
					TextColor="#383838" FontSize="Medium" >
				</Label>

				<Label Text="34" x:Name="lblDispCabine" HorizontalOptions="FillAndExpand"
					Grid.Row="1"  Grid.Column="4"
					HorizontalTextAlignment="Center" VerticalTextAlignment="Center"
					TextColor="#383838" FontSize="Medium" >
				</Label>

				<Label Text=">" HorizontalOptions="StartAndExpand" VerticalOptions="FillAndExpand"
					Grid.Row="1"  Grid.Column="5"
					HorizontalTextAlignment="Center" VerticalTextAlignment="Center"
					TextColor="#383838" FontSize="12" >
				</Label>
				
			</Grid>

			<Grid Grid.Row="2" Grid.ColumnSpan="2" ColumnSpacing="10" RowSpacing="5"
					Margin="5,5,5,5" >
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="1.5*" />
					<ColumnDefinition Width="1.1*" />
					<ColumnDefinition Width="1.1*" />
					<ColumnDefinition Width="1.1*" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="0.8*" />
					<RowDefinition Height="4.2*" />
				</Grid.RowDefinitions>

				<Label Text="DISPONIBILITA'" HorizontalOptions="StartAndExpand"
					Grid.Row="0"  Grid.Column="0"
					HorizontalTextAlignment="Center" VerticalTextAlignment="End"
					TextColor="#383838" FontSize="12" Margin="2,5,5,10" >
				</Label>

				<Image Source="ombrellone.png" Margin="5,5,5,5" Aspect="AspectFit" HeightRequest="30"
					HorizontalOptions="Center" VerticalOptions="Center" 
					Grid.Row="0" Grid.Column="1"
 					></Image>

				<Image Source="lettino.png" Margin="5,5,5,5" Aspect="AspectFit" HeightRequest="30"
					HorizontalOptions="Center" VerticalOptions="Center" 
					Grid.Row="0" Grid.Column="2"
 					></Image>

				<Image Source="sdraio.png"  Margin="5,5,5,5" Aspect="AspectFit" HeightRequest="30"
					HorizontalOptions="Center" VerticalOptions="Center" 
					Grid.Row="0" Grid.Column="3"
 					></Image>

				<ListView x:Name="FileListView" ItemsSource="{Binding FileItems}" BackgroundColor="White" Grid.Row="1" Grid.ColumnSpan="4" RowHeight="45" >
				    <ListView.ItemTemplate>
				      <DataTemplate>
							<ViewCell>
						        <Grid>
						          <Grid.RowDefinitions>
						            <RowDefinition Height="*"/>
						          </Grid.RowDefinitions>
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="1.5*" />
										<ColumnDefinition Width="1.1*" />
										<ColumnDefinition Width="1.1*" />
										<ColumnDefinition Width="1.1*" />
									</Grid.ColumnDefinitions>
						          	<Label Grid.Row="0" Grid.Column="0" TextColor="#383838" Text="{Binding NomeFila}" FontSize="14" Margin="10,0,0,0"
										VerticalTextAlignment="Center" HorizontalTextAlignment="Start" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand"/>

									<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Grid.Row="0" Grid.Column="1"
										Margin="2,0,2,0">
										<Entry HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Keyboard="Numeric"
											HorizontalTextAlignment="Center" TextColor="#3d83f5" 
											Text="{Binding QtaOmbrelloni}" />

										<Label TextColor="Black" Text="/" FontSize="12" Margin="1,0,1,0"
											VerticalTextAlignment="Center" HorizontalTextAlignment="Start" HorizontalOptions="Start" VerticalOptions="CenterAndExpand"/>

										<Label TextColor="Black" Text="{Binding QtaOmbrelloni}" FontSize="12" Margin="0,0,1,0"
											VerticalTextAlignment="Center" HorizontalTextAlignment="Start" HorizontalOptions="StartAndExpand" VerticalOptions="CenterAndExpand"/>
									</StackLayout>

									<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Grid.Row="0" Grid.Column="2"
										Margin="2,0,2,0">
										<Entry HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Keyboard="Numeric"
											HorizontalTextAlignment="Center" TextColor="#3d83f5" 
											Text="{Binding QtaLettini}" />

										<Label TextColor="Black" Text="/" FontSize="12" Margin="1,0,1,0"
											VerticalTextAlignment="Center" HorizontalTextAlignment="Start" HorizontalOptions="Start" VerticalOptions="CenterAndExpand"/>

										<Label TextColor="Black" Text="{Binding QtaLettini}" FontSize="12" Margin="0,0,1,0"
											VerticalTextAlignment="Center" HorizontalTextAlignment="Start" HorizontalOptions="StartAndExpand" VerticalOptions="CenterAndExpand"/>
									</StackLayout>

									<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Grid.Row="0" Grid.Column="3"
										Margin="2,0,2,0">
										<Entry  HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Keyboard="Numeric"
											HorizontalTextAlignment="Center" TextColor="#3d83f5" 
											Text="{Binding QtaSdraio}" />

										<Label TextColor="Black" Text="/" FontSize="12" Margin="1,0,1,0"
											VerticalTextAlignment="Center" HorizontalTextAlignment="Start" HorizontalOptions="Start" VerticalOptions="CenterAndExpand"/>

										<Label TextColor="Black" Text="{Binding QtaSdraio}" FontSize="12" Margin="0,0,1,0"
											VerticalTextAlignment="Center" HorizontalTextAlignment="Start" HorizontalOptions="StartAndExpand" VerticalOptions="CenterAndExpand"/>
									</StackLayout>

						        </Grid>
							</ViewCell>
				      </DataTemplate>
				    </ListView.ItemTemplate>
			  	</ListView>
			</Grid>

			<BoxView Color="White" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Grid.Row="3" Grid.ColumnSpan="2" />
			
			<Button Text="Riduci disponibilitÃ " x:Name="btnRegistrati" HorizontalOptions="FillAndExpand"
				Grid.Row="3" Grid.ColumnSpan="2" Clicked="Handle_Clicked" BorderRadius="3" VerticalOptions="Center"
				BackgroundColor="#3d83f5" TextColor="White" FontSize="17"
				Margin="20,0,20,0"  >
			</Button>
		</Grid>
		
	</ContentPage.Content>
</ContentPage>
